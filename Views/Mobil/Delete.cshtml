@model RoditriPekanbaru.Models.Mobil

@{
    ViewData["Title"] = "Hapus Mobil";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Hapus Mobil</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Kembali ke Daftar
        </a>
    </div>

    <!-- Delete Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Konfirmasi Hapus Data</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5>Apakah Anda yakin ingin menghapus mobil ini?</h5>
            </div>

            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Merek)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Merek)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Model)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Model)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Tahun)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Tahun)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Warna)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Warna)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Harga)</dt>
                <dd class="col-sm-9">@Model.Harga.ToString("C0", new System.Globalization.CultureInfo("id-ID"))</dd>
            </dl>

            <form asp-action="Delete" class="text-center mt-4">
                <input type="hidden" asp-for="MobilId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Hapus Mobil
                </button>
                <a asp-action="Index" class="btn btn-secondary ml-2">
                    <i class="fas fa-times"></i> Batal
                </a>
            </form>
        </div>
    </div>
</div>