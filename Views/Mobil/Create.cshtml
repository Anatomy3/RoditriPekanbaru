@model RoditriPekanbaru.Models.Mobil

@{
    ViewData["Title"] = "Tambah Mobil Baru";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Tambah Mobil Baru</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Kembali ke Daftar
        </a>
    </div>

    <!-- Form Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Form Data Mobil</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Merek" class="control-label"></label>
                            <input asp-for="Merek" class="form-control" />
                            <span asp-validation-for="Merek" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Model" class="control-label"></label>
                            <input asp-for="Model" class="form-control" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Tahun" class="control-label"></label>
                            <input asp-for="Tahun" class="form-control" />
                            <span asp-validation-for="Tahun" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Warna" class="control-label"></label>
                            <input asp-for="Warna" class="form-control" />
                            <span asp-validation-for="Warna" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Harga" class="control-label"></label>
                            <input asp-for="Harga" class="form-control" />
                            <span asp-validation-for="Harga" class="text-danger"></span>
                        </div>

                        <!-- Tambahkan input untuk upload gambar -->
                        <div class="form-group mb-3">
                            <label for="gambarFile" class="control-label">Gambar Mobil</label>
                            <input type="file" id="gambarFile" name="gambarFile" class="form-control" accept="image/*" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="NoRangka" class="control-label"></label>
                            <input asp-for="NoRangka" class="form-control" />
                            <span asp-validation-for="NoRangka" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="NoMesin" class="control-label"></label>
                            <input asp-for="NoMesin" class="form-control" />
                            <span asp-validation-for="NoMesin" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="NoPolisi" class="control-label"></label>
                            <input asp-for="NoPolisi" class="form-control" />
                            <span asp-validation-for="NoPolisi" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Kondisi" class="control-label"></label>
                            <textarea asp-for="Kondisi" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Kondisi" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Simpan
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">
                        <i class="fas fa-times"></i> Batal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}