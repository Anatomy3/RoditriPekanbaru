@model RoditriPekanbaru.Models.Mobil

@{
    ViewData["Title"] = "Detail Mobil";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Detail Mobil</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.MobilId" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Kembali ke Daftar
            </a>
        </div>
    </div>

    <!-- Details Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Informasi Mobil</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Merek)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Merek)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Model)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Model)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Tahun)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Tahun)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Warna)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Warna)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Harga)</dt>
                        <dd class="col-sm-8">@Model.Harga.ToString("C0", new System.Globalization.CultureInfo("id-ID"))</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NoRangka)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NoRangka)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NoMesin)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NoMesin)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NoPolisi)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NoPolisi)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TanggalInput)</dt>
                        <dd class="col-sm-8">@Model.TanggalInput.ToString("dd MMMM yyyy")</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsAvailable)
                            {
                                <span class="badge bg-success text-white">Tersedia</span>
                            }
                            else
                            {
                                <span class="badge bg-danger text-white">Terjual</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <dl class="row">
                        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Kondisi)</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Kondisi)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>