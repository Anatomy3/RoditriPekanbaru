@model RoditriPekanbaru.Models.TransaksiPenjualan

@{
    ViewData["Title"] = "Tambah Transaksi Baru";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Tambah Transaksi Baru</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Kembali ke Daftar
        </a>
    </div>

    <!-- Form Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Form Transaksi Penjualan</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="NoFaktur" class="control-label"></label>
                            <input asp-for="NoFaktur" class="form-control" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="TanggalTransaksi" class="control-label"></label>
                            <input asp-for="TanggalTransaksi" class="form-control" type="date" />
                            <span asp-validation-for="TanggalTransaksi" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CustomerId" class="control-label">Customer</label>
                            <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId">
                                <option value="">-- Pilih Customer --</option>
                            </select>
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="MobilId" class="control-label">Mobil</label>
                            <select asp-for="MobilId" class="form-control" asp-items="ViewBag.MobilId" id="selectMobil">
                                <option value="">-- Pilih Mobil --</option>
                            </select>
                            <span asp-validation-for="MobilId" class="text-danger"></span>
                        </div>

                        <div id="mobilInfo" style="display:none;" class="card bg-light p-3 mb-3">
                            <h6 class="font-weight-bold">Informasi Mobil</h6>
                            <div id="mobilDetailInfo"></div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="HargaJual" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Rp</span>
                                </div>
                                <input asp-for="HargaJual" class="form-control" id="hargaJual" />
                            </div>
                            <span asp-validation-for="HargaJual" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="diskonPersen" class="control-label">Diskon (%)</label>
                                    <div class="input-group">
                                        <input type="number" id="diskonPersen" class="form-control" min="0" max="100" value="0" />
                                        <div class="input-group-append">
                                            <span class="input-group-text">%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Diskon" class="control-label">Nilai Diskon</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Rp</span>
                                        </div>
                                        <input asp-for="Diskon" class="form-control bg-light" id="diskon" readonly />
                                    </div>
                                    <span asp-validation-for="Diskon" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="TotalBayar" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Rp</span>
                                </div>
                                <input asp-for="TotalBayar" class="form-control bg-light" id="totalBayar" readonly />
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="UangMuka" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Rp</span>
                                </div>
                                <input asp-for="UangMuka" class="form-control" id="uangMuka" value="0" />
                            </div>
                            <span asp-validation-for="UangMuka" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SisaPembayaran" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Rp</span>
                                </div>
                                <input asp-for="SisaPembayaran" class="form-control bg-light" id="sisaPembayaran" readonly />
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CaraPembayaran" class="control-label"></label>
                            <select asp-for="CaraPembayaran" class="form-control">
                                <option value="Tunai">Tunai</option>
                                <option value="Transfer Bank">Transfer Bank</option>
                                <option value="Kredit">Kredit</option>
                            </select>
                            <span asp-validation-for="CaraPembayaran" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="StatusMobil" class="control-label"></label>
                            <select asp-for="StatusMobil" class="form-control">
                                <option value="Siap Diambil">Siap Diambil</option>
                                <option value="Proses Delivery">Proses Delivery</option>
                                <option value="Sudah Diterima">Sudah Diterima</option>
                            </select>
                            <span asp-validation-for="StatusMobil" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Keterangan" class="control-label"></label>
                            <textarea asp-for="Keterangan" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Keterangan" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="Admin" value="@Context.Session.GetString("NamaLengkap")" />
                    </div>
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Simpan Transaksi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">
                        <i class="fas fa-times"></i> Batal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Format number inputs
            function formatNumber(num) {
                return num.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,');
            }

            // Calculate discount value based on percentage
            function calculateDiskon() {
                var hargaJual = parseFloat($('#hargaJual').val().replace(/,/g, '')) || 0;
                var diskonPersen = parseFloat($('#diskonPersen').val()) || 0;

                // Calculate discount amount
                var diskonValue = (hargaJual * diskonPersen) / 100;

                // Update discount value field
                $('#diskon').val(Math.round(diskonValue));

                return diskonValue;
            }

            // Calculate total payment
            function calculateTotal() {
                var hargaJual = parseFloat($('#hargaJual').val().replace(/,/g, '')) || 0;
                var diskonValue = calculateDiskon();
                var uangMuka = parseFloat($('#uangMuka').val().replace(/,/g, '')) || 0;

                var totalBayar = hargaJual - diskonValue;
                var sisaPembayaran = totalBayar - uangMuka;

                $('#totalBayar').val(Math.round(totalBayar));
                $('#sisaPembayaran').val(Math.round(sisaPembayaran));
            }

            // Update calculations when inputs change
            $('#hargaJual, #diskonPersen, #uangMuka').on('input', function() {
                calculateTotal();
            });

            // Get car details when a car is selected
            $('#selectMobil').change(function() {
                var mobilId = $(this).val();
                if (mobilId) {
                    $.ajax({
                        url: '@Url.Action("GetMobilInfo", "Transaksi")' + '?mobilId=' + mobilId,
                        type: 'GET',
                        success: function(result) {
                            $('#hargaJual').val(result.harga);
                            calculateTotal();

                            var mobilDetail = `
                                <p><strong>Merek:</strong> ${result.merek}</p>
                                <p><strong>Model:</strong> ${result.model}</p>
                                <p><strong>Tahun:</strong> ${result.tahun}</p>
                                <p><strong>Warna:</strong> ${result.warna}</p>
                                <p><strong>No. Polisi:</strong> ${result.noPolisi || '-'}</p>
                            `;

                            $('#mobilDetailInfo').html(mobilDetail);
                            $('#mobilInfo').show();
                        },
                        error: function() {
                            alert('Terjadi kesalahan. Silakan coba lagi.');
                        }
                    });
                } else {
                    $('#mobilInfo').hide();
                    $('#hargaJual').val(0);
                    calculateTotal();
                }
            });

            // Initialize calculation
            calculateTotal();
        });
    </script>
}