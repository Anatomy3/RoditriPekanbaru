                                <input asp-for="Username" class="form-control form-control-lg" placeholder="Pilih username unik" autocomplete="username" required id="usernameInput">
                                <div class="form-text">Username harus unik dan akan digunakan untuk login</div>
                                <div class="username-status" id="usernameStatus"></div>
                                <span asp-validation-for="Username" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label fw-semibold">
                                    <i class="fas fa-lock"></i>Password
