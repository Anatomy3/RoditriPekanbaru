@model RoditriPekanbaru.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Daftar Akun";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<style>
    :root {
        --roditri-primary: #ff5722;
        --roditri-primary-dark: #e64a19;
        --roditri-primary-light: #ff8a65;
        --roditri-secondary: #2c3e50;
        --roditri-success: #28a745;
        --roditri-warning: #ffc107;
        --roditri-danger: #dc3545;
    }

    body {
        background: linear-gradient(135deg, #ff5722 0%, #ff8a65 50%, #ffab91 100%);
        min-height: 100vh;
    }

    .register-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        padding: 2rem 0;
    }

        .register-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 20% 80%, rgba(255, 87, 34, 0.3) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255, 138, 101, 0.2) 0%, transparent 50%), radial-gradient(circle at 40% 40%, rgba(255, 171, 145, 0.1) 0%, transparent 50%);
            pointer-events: none;
        }

    .card {
        background: rgba(255, 255, 255, 0.95) !important;
        backdrop-filter: blur(20px);
        border: none !important;
        border-radius: 20px !important;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15), 0 0 0 1px rgba(255, 255, 255, 0.1) !important;
        position: relative;
        z-index: 1;
        max-width: 480px;
        width: 100%;
    }

    .brand-section {
        text-align: center;
        margin-bottom: 2rem;
    }

    .brand-icon {
        background: linear-gradient(135deg, var(--roditri-primary), var(--roditri-primary-light));
        color: white;
        width: 80px;
        height: 80px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        font-size: 2.2rem;
        box-shadow: 0 10px 30px rgba(255, 87, 34, 0.3);
        transform: rotate(3deg);
        transition: transform 0.3s ease;
    }

        .brand-icon:hover {
            transform: rotate(0deg) scale(1.05);
        }

    .text-success {
        color: var(--roditri-primary) !important;
    }

    .brand-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--roditri-secondary);
        margin-bottom: 0.5rem;
    }

    .brand-subtitle {
        color: #6c757d;
        font-size: 1rem;
    }

    .form-label {
        color: var(--roditri-secondary) !important;
        font-weight: 600;
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .form-label i {
            color: var(--roditri-primary);
            width: 18px;
        }

    .form-control {
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 1rem 1.25rem;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: rgba(248, 249, 250, 0.8);
    }

        .form-control:focus {
            border-color: var(--roditri-primary) !important;
            box-shadow: 0 0 0 3px rgba(255, 87, 34, 0.1) !important;
            background: white;
            outline: none;
        }

        .form-control.is-valid {
            border-color: var(--roditri-success) !important;
            padding-right: 3rem;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%2328a745' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 1rem center;
            background-size: 1rem;
        }

        .form-control.is-invalid {
            border-color: var(--roditri-danger) !important;
            padding-right: 3rem;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23dc3545' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 1rem center;
            background-size: 1rem;
        }

    .input-group .form-control {
        border-right: none;
    }

    .btn-outline-secondary {
        border-left: none !important;
        border-color: #e9ecef !important;
        color: #6c757d;
        border-radius: 0 12px 12px 0 !important;
        transition: all 0.3s ease;
    }

        .btn-outline-secondary:hover {
            background-color: var(--roditri-primary) !important;
            border-color: var(--roditri-primary) !important;
            color: white !important;
        }

    .btn-success {
        background: linear-gradient(135deg, var(--roditri-primary), var(--roditri-primary-light)) !important;
        border: none !important;
        border-radius: 12px;
        padding: 1rem 2rem;
        font-size: 1.1rem;
        font-weight: 600;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .btn-success::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s ease;
        }

        .btn-success:hover::before {
            left: 100%;
        }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(255, 87, 34, 0.3) !important;
            background: linear-gradient(135deg, var(--roditri-primary-dark), var(--roditri-primary)) !important;
        }

        .btn-success:active {
            transform: translateY(0);
        }

        .btn-success:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

    .form-check-input {
        width: 1.2rem;
        height: 1.2rem;
        border: 2px solid #dee2e6;
        border-radius: 4px;
    }

        .form-check-input:checked {
            background-color: var(--roditri-primary) !important;
            border-color: var(--roditri-primary) !important;
        }

        .form-check-input:focus {
            box-shadow: 0 0 0 0.25rem rgba(255, 87, 34, 0.25) !important;
        }

    .terms-section {
        background: rgba(255, 87, 34, 0.05);
        border: 1px solid rgba(255, 87, 34, 0.1);
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

        .terms-section .form-check-label {
            color: #6c757d;
            font-size: 0.9rem;
            line-height: 1.4;
        }

        .terms-section a {
            color: var(--roditri-primary) !important;
            text-decoration: none;
            font-weight: 500;
        }

            .terms-section a:hover {
                color: var(--roditri-primary-dark) !important;
                text-decoration: underline;
            }

    .divider {
        position: relative;
        text-align: center;
        margin: 2rem 0;
        color: #6c757d;
        font-size: 0.9rem;
    }

        .divider::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background: #dee2e6;
        }

        .divider span {
            background: rgba(255, 255, 255, 0.95);
            padding: 0 1rem;
            position: relative;
        }

    .login-section {
        text-align: center;
        padding: 1.5rem;
        background: rgba(102, 126, 234, 0.05);
        border-radius: 12px;
        margin-top: 1.5rem;
    }

        .login-section p {
            margin: 0;
            color: #6c757d;
            font-size: 0.95rem;
        }

        .login-section a {
            color: var(--roditri-primary) !important;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

            .login-section a:hover {
                color: var(--roditri-primary-dark) !important;
            }

    .benefits-section {
        background: rgba(255, 87, 34, 0.08) !important;
        border: 1px solid rgba(255, 87, 34, 0.2) !important;
        border-left: 4px solid var(--roditri-primary) !important;
        border-radius: 12px;
        margin-top: 2rem;
    }

    .text-primary {
        color: var(--roditri-primary) !important;
    }

    .benefits-section .fa-star {
        color: var(--roditri-primary) !important;
    }

    .benefits-section .text-success {
        color: var(--roditri-success) !important;
    }

    .password-strength {
        margin-top: 0.5rem;
    }

    .progress {
        height: 4px !important;
        border-radius: 2px;
        background-color: #e9ecef;
        margin-top: 0.5rem;
    }

    .progress-bar {
        border-radius: 2px;
        transition: all 0.3s ease;
    }

    .strength-text {
        font-size: 0.8rem;
        margin-top: 0.25rem;
        font-weight: 500;
    }

    .username-status {
        font-size: 0.8rem;
        margin-top: 0.25rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .username-available {
        color: var(--roditri-success);
    }

    .username-taken {
        color: var(--roditri-danger);
    }

    .alert-danger {
        background: rgba(220, 53, 69, 0.1) !important;
        border: 1px solid rgba(220, 53, 69, 0.2) !important;
        border-left: 4px solid #dc3545 !important;
        color: #dc3545 !important;
        border-radius: 12px;
    }

    /* Loading state */
    .btn-success.loading {
        pointer-events: none;
        opacity: 0.8;
    }

        .btn-success.loading::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 20px;
            height: 20px;
            margin: -10px 0 0 -10px;
            border: 2px solid transparent;
            border-top: 2px solid white;
            border-radius: 50%;
        }

    /* Mobile responsive styles - no media queries */
    .register-container {
        padding: clamp(1rem, 3vw, 2rem);
    }

    .card {
        margin: 0;
        max-width: min(480px, 90vw);
    }

    .brand-icon {
        width: clamp(60px, 15vw, 80px);
        height: clamp(60px, 15vw, 80px);
        font-size: clamp(1.8rem, 5vw, 2.2rem);
    }

    .brand-title {
        font-size: clamp(1.5rem, 4vw, 1.8rem);
    }

    .form-control {
        padding: clamp(0.875rem, 2.5vw, 1rem) clamp(1rem, 3vw, 1.25rem);
        font-size: clamp(0.9rem, 2.5vw, 1rem);
    }

    .btn-success {
        padding: clamp(0.875rem, 2.5vw, 1rem) clamp(1.5rem, 4vw, 2rem);
        font-size: clamp(1rem, 3vw, 1.1rem);
    }
</style>

<div class="register-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg">
                    <div class="card-body p-5">
                        <!-- Brand Section -->
                        <div class="brand-section">
                            <div class="brand-icon">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <h1 class="brand-title">Bergabung dengan Kami</h1>
