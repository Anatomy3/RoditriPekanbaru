                            </div>

                            <div class="mb-4">
                                <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                                    <i class="fas fa-lock"></i>Konfirmasi Password
                                </label>
                                <div class="input-group">
                                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Ulangi password Anda" autocomplete="new-password" required id="confirmPasswordInput">
                                    <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('ConfirmPassword')">
                                        <i class="fas fa-eye" id="toggleIcon2"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>

                            <!-- Terms and Conditions -->
                            <div class="terms-section">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                                    <label class="form-check-label" for="agreeTerms">
                                        Saya setuju dengan
                                        <a href="#" onclick="showTerms()">Syarat & Ketentuan</a>
                                        dan
                                        <a href="#" onclick="showPrivacy()">Kebijakan Privasi</a>
                                    </label>
                                </div>
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-success btn-lg" id="registerBtn" disabled>
                                    <i class="fas fa-user-plus me-2"></i>Daftar Sekarang
                                </button>
                            </div>
                        </form>

                        <!-- Divider -->
                        <div class="divider">
                            <span>atau</span>
                        </div>

                        <!-- Login Section -->
                        <div class="login-section">
                            <p>
                                Sudah punya akun?
                                <a href="@Url.Action("Login", "Auth")">Masuk di sini</a>
                            </p>
                        </div>

                        <!-- Benefits of Registration -->
                        <div class="alert benefits-section">
                            <h6 class="fw-bold text-primary mb-2">
                                <i class="fas fa-star me-2"></i>Keuntungan Bergabung:
                            </h6>
                            <ul class="list-unstyled mb-0 small">
                                <li><i class="fas fa-check text-success me-2"></i>Akses informasi mobil terlengkap</li>
                                <li><i class="fas fa-check text-success me-2"></i>Notifikasi mobil baru sesuai preferensi</li>
                                <li><i class="fas fa-check text-success me-2"></i>Promo dan diskon eksklusif</li>
                                <li><i class="fas fa-check text-success me-2"></i>Konsultasi gratis dengan tim ahli</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

