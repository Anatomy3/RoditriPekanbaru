                toggleIcon.className = 'fas fa-eye-slash';
            } else {
                passwordInput.type = 'password';
                toggleIcon.className = 'fas fa-eye';
            }
        }
    }

    function showTerms() {
        alert('Syarat & Ketentuan:\n\n1. Pengguna bertanggung jawab atas keakuratan informasi\n2. Dilarang menyalahgunakan platform\n3. RodiTri berhak memblokir akun yang melanggar\n4. Data pribadi akan dijaga kerahasiaannya\n\nUntuk informasi lengkap, hubungi: info@roditripekanbaru.com');
    }

    function showPrivacy() {
        alert('Kebijakan Privasi:\n\n1. Data pribadi Anda aman bersama kami\n2. Informasi tidak akan dibagikan ke pihak ketiga\n3. Cookie digunakan untuk meningkatkan pengalaman\n4. Anda dapat menghapus akun kapan saja\n\nUntuk detail lengkap, hubungi: privacy@roditripekanbaru.com');
    }

    // Form validation and interactive features
    document.addEventListener('DOMContentLoaded', function() {
        const passwordInput = document.getElementById('Password');
        const confirmPasswordInput = document.getElementById('ConfirmPassword');
        const usernameInput = document.getElementById('usernameInput');
        const namaLengkapInput = document.getElementById('namaLengkapInput');
        const registerBtn = document.getElementById('registerBtn');
        const agreeTerms = document.getElementById('agreeTerms');

        // Password strength indicator
        if (passwordInput) {
            passwordInput.addEventListener('input', function() {
                const password = this.value;

                // Remove existing indicators
                const existingIndicator = this.parentNode.parentNode.querySelector('.progress');
                const existingText = this.parentNode.parentNode.querySelector('.strength-text');
                if (existingIndicator) existingIndicator.remove();
                if (existingText) existingText.remove();

                if (password.length > 0) {
                    let strength = 0;
                    let strengthText = '';
                    let strengthColor = '';

                    if (password.length >= 6) strength++;
                    if (password.match(/[a-z]/) && password.match(/[A-Z]/)) strength++;
                    if (password.match(/[0-9]/)) strength++;
                    if (password.match(/[^a-zA-Z0-9]/)) strength++;

                    const strengthColors = ['bg-danger', 'bg-warning', 'bg-info', 'bg-success'];
                    const strengthTexts = ['Lemah', 'Cukup', 'Baik', 'Kuat'];
                    const strengthTextColors = ['#dc3545', '#ffc107', '#17a2b8', '#28a745'];

                    const strengthIndicator = document.createElement('div');
                    strengthIndicator.className = 'progress mt-1';
                    strengthIndicator.innerHTML = `<div class="progress-bar ${strengthColors[strength-1] || 'bg-danger'}" style="width: ${(strength/4)*100}%"></div>`;

                    const strengthTextEl = document.createElement('div');
                    strengthTextEl.className = 'strength-text';
                    strengthTextEl.style.color = strengthTextColors[strength-1] || '#dc3545';
                    strengthTextEl.textContent = `Kekuatan password: ${strengthTexts[strength-1] || 'Lemah'}`;

                    this.parentNode.parentNode.appendChild(strengthIndicator);
                    this.parentNode.parentNode.appendChild(strengthTextEl);

                    // Validate input
                    if (strength >= 2) {
                        this.classList.add('is-valid');
                        this.classList.remove('is-invalid');
                    } else {
                        this.classList.add('is-invalid');
                        this.classList.remove('is-valid');
                    }
                }

                validateForm();
            });
        }

        // Password confirmation
        if (confirmPasswordInput) {
            confirmPasswordInput.addEventListener('input', function() {
                const password = passwordInput.value;
                const confirmPassword = this.value;

                if (confirmPassword.length > 0) {
                    if (password === confirmPassword) {
                        this.classList.add('is-valid');
                        this.classList.remove('is-invalid');
                    } else {
                        this.classList.add('is-invalid');
                        this.classList.remove('is-valid');
                    }
                }

                validateForm();
            });
        }

        // Username validation (simulated)
        if (usernameInput) {
            let usernameTimeout;
            usernameInput.addEventListener('input', function() {
                const username = this.value;
                const statusEl = document.getElementById('usernameStatus');

                if (username.length >= 3) {
                    statusEl.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Memeriksa ketersediaan...';

                    clearTimeout(usernameTimeout);
                    usernameTimeout = setTimeout(() => {
                        // Simulate API call
                        const isAvailable = !['admin', 'user', 'test', 'demo'].includes(username.toLowerCase());

                        if (isAvailable) {
                            statusEl.innerHTML = '<i class="fas fa-check"></i> Username tersedia';
                            statusEl.className = 'username-status username-available';
                            this.classList.add('is-valid');
                            this.classList.remove('is-invalid');
                        } else {
                            statusEl.innerHTML = '<i class="fas fa-times"></i> Username sudah digunakan';
                            statusEl.className = 'username-status username-taken';
                            this.classList.add('is-invalid');
                            this.classList.remove('is-valid');
                        }

                        validateForm();
                    }, 1000);
                } else {
                    statusEl.innerHTML = '';
                    this.classList.remove('is-valid', 'is-invalid');
                }

                validateForm();
            });
        }

        // Name validation
        if (namaLengkapInput) {
            namaLengkapInput.addEventListener('input', function() {
                const name = this.value;
                if (name.length >= 2) {
                    this.classList.add('is-valid');
                    this.classList.remove('is-invalid');
                } else {
                    this.classList.remove('is-valid', 'is-invalid');
                }
                validateForm();
            });
        }

        // Form validation
        function validateForm() {
            const nameValid = namaLengkapInput.value.length >= 2;
            const usernameValid = usernameInput.classList.contains('is-valid');
            const passwordValid = passwordInput.classList.contains('is-valid');
            const confirmPasswordValid = confirmPasswordInput.classList.contains('is-valid');
            const termsChecked = agreeTerms.checked;

            const isValid = nameValid && usernameValid && passwordValid && confirmPasswordValid && termsChecked;

            registerBtn.disabled = !isValid;
        }

        // Terms checkbox validation
        agreeTerms.addEventListener('change', validateForm);

        // Form submit handler
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            registerBtn.classList.add('loading');
            registerBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Memproses...';
        });
    });
</script>

