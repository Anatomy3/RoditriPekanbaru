@model RoditriPekanbaru.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin"; // We'll create this special layout for login
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg mt-5">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Roditri Pekanbaru</h3>
                    <p class="mb-0">Sistem Informasi Penjualan Mobil</p>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="~/img/logo.png" alt="Logo" class="img-fluid" style="max-height: 100px;">
                    </div>

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Username" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input asp-for="Username" class="form-control" placeholder="Masukkan username..." />
                            </div>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Password" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                </div>
                                <input asp-for="Password" class="form-control" placeholder="Masukkan password..." />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check mb-4">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fas fa-sign-in-alt"></i> Login
                            </button>
                        </div>
                    </form>

                    <!-- For presentation purposes -->
                    <div class="alert alert-info mt-4">
                        <p class="mb-0"><strong>Demo Account:</strong></p>
                        <p class="mb-0">Username: admin</p>
                        <p class="mb-0">Password: admin123</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}