@model RoditriPekanbaru.ViewModels.LandingViewModel
@{
    ViewData["Title"] = "Beranda";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<!-- Hero Banner -->
<section class="hero-banner">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Temukan Mobil Impian Anda</h1>
                <p class="lead mb-4">Dapatkan mobil bekas berkualitas dengan harga terbaik di RodiTri Pekanbaru. Proses mudah, harga transparan, dan garansi terpercaya.</p>
                <div class="d-flex gap-3">
                    <a href="#cars-section" class="btn btn-light btn-lg">
                        <i class="fas fa-car"></i> Lihat Koleksi Mobil
                    </a>
                    <a href="tel:+6281234567890" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-phone"></i> Hubungi Kami
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-car-side" style="font-size: 10rem; opacity: 0.7;"></i>
            </div>
        </div>
    </div>
</section>


<!-- Filter Section -->
<section class="py-4" id="cars-section">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="fw-bold">Mobil Pilihan</h2>
            <p class="text-muted">Temukan mobil bekas berkualitas dengan berbagai pilihan merek dan model</p>
        </div>

        <div class="filter-section">
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-md-2">
                        <label class="form-label"><i class="fas fa-car me-1"></i>Merek</label>
                        <select name="merek" class="form-select">
                            <option value="">Semua Merek</option>
                            @if (Model?.Brands != null)
                            {
                                @foreach (var brand in Model.Brands)
                                {
                                    <option value="@brand" selected="@(brand == Model.SelectedMerek)">@brand</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label"><i class="fas fa-money-bill me-1"></i>Harga Min</label>
                        <input type="number" name="minHarga" class="form-control" placeholder="0" value="@(Model?.MinHarga)" step="1000000">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label"><i class="fas fa-money-bill me-1"></i>Harga Max</label>
                        <input type="number" name="maxHarga" class="form-control" placeholder="999999999" value="@(Model?.MaxHarga)" step="1000000">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label"><i class="fas fa-calendar me-1"></i>Tahun Min</label>
                        <input type="number" name="tahunMin" class="form-control" placeholder="2000" value="@(Model?.TahunMin)" min="1990" max="2030">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label"><i class="fas fa-calendar me-1"></i>Tahun Max</label>
                        <input type="number" name="tahunMax" class="form-control" placeholder="2024" value="@(Model?.TahunMax)" min="1990" max="2030">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <div class="d-grid w-100 gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-filter"></i> Filter
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-times"></i> Reset
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Menampilkan @(Model?.Cars?.Count ?? 0) dari @(Model?.TotalCars ?? 0) mobil</span>
            <div class="btn-group btn-group-sm" role="group">
                <input type="radio" class="btn-check" name="btnradio" id="grid-view" autocomplete="off" checked>
                <label class="btn btn-outline-primary" for="grid-view"><i class="fas fa-th"></i></label>
                <input type="radio" class="btn-check" name="btnradio" id="list-view" autocomplete="off">
                <label class="btn btn-outline-primary" for="list-view"><i class="fas fa-list"></i></label>
            </div>
        </div>
    </div>
</section>

<!-- Car Listings -->
<section class="pb-5">
    <div class="container">
        @if (Model.Cars.Any())
        {
            <div class="row" id="car-grid">
                @foreach (var car in Model.Cars)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="car-card h-100">
                            @* Flash Sale Badge *@
                            @if (car.Harga < 300000000)
                            {
                                <div class="flash-sale">
                                    <i class="fas fa-fire me-1"></i>FLASH SALE
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(car.GambarMobil))
                            {
                                <img src="@car.GambarMobil" alt="@car.NamaMobil" class="car-image">
                            }
                            else
                            {
                                <div class="car-image bg-gradient d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #f8f9fa, #e9ecef);">
                                    <i class="fas fa-car fa-4x text-muted"></i>
                                </div>
                            }

                            <div class="p-3 d-flex flex-column">
                                <div class="price-tag mb-2">@car.Harga.ToString("C0", new System.Globalization.CultureInfo("id-ID"))</div>
                                <h5 class="card-title mb-2">@car.NamaMobil</h5>

                                <div class="row text-muted small mb-3">
                                    <div class="col-6">
                                        <i class="fas fa-calendar text-primary"></i> @car.Tahun
                                    </div>
                                    <div class="col-6">
                                        <i class="fas fa-palette text-primary"></i> @car.Warna
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(car.Kondisi))
                                {
                                    <p class="text-muted small mb-3 flex-grow-1">@car.Kondisi</p>
                                }

                                <div class="mt-auto">
                                    <div class="d-grid gap-2">
                                        <a href="@Url.Action("CarDetails", new { id = car.MobilId })" class="btn btn-primary">
                                            <i class="fas fa-eye"></i> Lihat Detail
                                        </a>
                                        <a href="https://wa.me/6281234567890?text=Halo, saya tertarik dengan mobil @car.NamaMobil"
                                           class="btn btn-success btn-sm" target="_blank">
                                            <i class="fab fa-whatsapp"></i> Chat WhatsApp
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if ((Model?.TotalPages ?? 1) > 1)
            {
                <nav aria-label="Car pagination" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (Model?.HasPreviousPage == true)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new {
                                    page = Model.PreviousPage,
                                    merek = Model.SelectedMerek,
                                    search = Model.SearchTerm,
                                    minHarga = Model.MinHarga,
                                    maxHarga = Model.MaxHarga,
                                    tahunMin = Model.TahunMin,
                                    tahunMax = Model.TahunMax
                                })">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                            </li>
                        }

                        @for (int i = Math.Max(1, (Model?.CurrentPage ?? 1) - 2); i <= Math.Min(Model?.TotalPages ?? 1, (Model?.CurrentPage ?? 1) + 2); i++)
                        {
                            <li class="page-item @(i == (Model?.CurrentPage ?? 1) ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new {
                                    page = i,
                                    merek = Model?.SelectedMerek,
                                    search = Model?.SearchTerm,
                                    minHarga = Model?.MinHarga,
                                    maxHarga = Model?.MaxHarga,
                                    tahunMin = Model?.TahunMin,
                                    tahunMax = Model?.TahunMax
                                })">@i</a>
                            </li>
                        }

                        @if (Model?.HasNextPage == true)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new {
                                    page = Model.NextPage,
                                    merek = Model?.SelectedMerek,
                                    search = Model?.SearchTerm,
                                    minHarga = Model?.MinHarga,
                                    maxHarga = Model?.MaxHarga,
                                    tahunMin = Model?.TahunMin,
                                    tahunMax = Model?.TahunMax
                                })">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-car fa-4x text-muted mb-4"></i>
                <h4 class="text-muted">Tidak ada mobil ditemukan</h4>
                <p class="text-muted">Coba ubah filter pencarian Anda atau lihat semua mobil</p>
                <a href="@Url.Action("Index")" class="btn btn-primary">
                    <i class="fas fa-refresh"></i> Lihat Semua Mobil
                </a>
            </div>
        }
    </div>
</section>

