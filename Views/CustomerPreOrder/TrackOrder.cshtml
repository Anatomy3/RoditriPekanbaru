@{
    ViewData["Title"] = "Lacak Pesanan";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="container py-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">
            <i class="fas fa-search me-2"></i>Lacak Pesanan Pre-Order
        </h1>
        <p class="text-muted">Masukkan nomor tracking atau nomor telepon untuk melihat status pesanan Anda</p>
    </div>

    <!-- Search Form -->
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h5 class="mb-0">
                        <i class="fas fa-magnifying-glass me-2"></i>Cari Pesanan
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <form asp-action="TrackOrder" method="post">
                        <div class="mb-4">
                            <label for="trackingInput" class="form-label fw-semibold">
                                Nomor Tracking atau Nomor Telepon
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" class="form-control form-control-lg"
                                       id="trackingInput" name="trackingInput"
                                       placeholder="TRK202406091234567 atau 081234567890"
                                       required>
                            </div>
                            <div class="form-text">
                                Masukkan nomor tracking (dimulai dengan TRK) atau nomor telepon yang digunakan saat pre-order
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-search me-2"></i>Lacak Sekarang
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Help Information -->
            <div class="card mt-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-question-circle me-2"></i>Butuh Bantuan?
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 text-center mb-3">
                            <i class="fas fa-id-card fa-2x text-primary mb-2"></i>
                            <h6>Nomor Tracking</h6>
                            <p class="small text-muted">
                                Format: TRK + tanggal + waktu + angka acak<br>
                                Contoh: TRK20240609123456789
                            </p>
                        </div>
                        <div class="col-md-6 text-center mb-3">
                            <i class="fas fa-phone fa-2x text-success mb-2"></i>
                            <h6>Nomor Telepon</h6>
                            <p class="small text-muted">
                                Nomor yang digunakan saat pre-order<br>
                                Contoh: 081234567890
                            </p>
                        </div>
                    </div>

                    <hr>

                    <!-- Contact Options -->
                    <div class="text-center">
                        <h6 class="mb-3">Masih Kesulitan?</h6>
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <a href="tel:+6281234567890" class="btn btn-outline-success w-100">
                                    <i class="fas fa-phone me-2"></i>Telepon
                                    <br><small>(0761) 123-4567</small>
                                </a>
                            </div>
                            <div class="col-md-6 mb-2">
                                <a href="https://wa.me/6281234567890?text=Halo,%20saya%20perlu%20bantuan%20untuk%20melacak%20pesanan%20pre-order%20saya."
                                   class="btn btn-outline-primary w-100" target="_blank">
                                    <i class="fab fa-whatsapp me-2"></i>WhatsApp
                                    <br><small>+62 812-3456-7890</small>
                                </a>
                            </div>
                        </div>
                        <div class="text-muted small mt-2">
                            <i class="fas fa-clock me-1"></i>
                            Layanan: Senin-Sabtu 08:00-17:00 WIB
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Information -->
    <div class="row mt-5">
        <div class="col-md-4 text-center mb-4">
            <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                 style="width: 80px; height: 80px;">
                <i class="fas fa-clock fa-2x text-primary"></i>
            </div>
            <h5>Real-time Update</h5>
            <p class="text-muted">Status pesanan Anda akan diupdate secara real-time oleh tim kami</p>
        </div>
        <div class="col-md-4 text-center mb-4">
            <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                 style="width: 80px; height: 80px;">
                <i class="fas fa-shield-alt fa-2x text-success"></i>
            </div>
            <h5>Aman & Terpercaya</h5>
            <p class="text-muted">Data Anda aman dan pesanan dijamin oleh RodiTri Pekanbaru</p>
        </div>
        <div class="col-md-4 text-center mb-4">
            <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                 style="width: 80px; height: 80px;">
                <i class="fas fa-headset fa-2x text-warning"></i>
            </div>
            <h5>Support 24/7</h5>
            <p class="text-muted">Tim customer service siap membantu Anda kapan saja</p>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="text-center mt-5">
        <h5 class="mb-3">Aksi Cepat</h5>
        <div class="d-flex flex-wrap justify-content-center gap-2">
            <a href="@Url.Action("Index", "Landing")" class="btn btn-outline-primary">
                <i class="fas fa-car me-1"></i>Lihat Mobil Lain
            </a>
            <a href="@Url.Action("Index", "Landing")#contact" class="btn btn-outline-info">
                <i class="fas fa-map-marker-alt me-1"></i>Lokasi Showroom
            </a>
            <a href="https://wa.me/6281234567890" class="btn btn-outline-success" target="_blank">
                <i class="fab fa-whatsapp me-1"></i>Chat Langsung
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-format input
            $('#trackingInput').on('input', function() {
                let value = $(this).val().toUpperCase();

                // If starts with numbers, assume it's phone number
                if (/^\d/.test(value)) {
                    // Remove any non-digit characters for phone
                    value = value.replace(/\D/g, '');

                    // Limit phone number length
                    if (value.length > 15) {
                        value = value.substring(0, 15);
                    }
                }

                $(this).val(value);
            });

            // Form submission with loading
            $('form').submit(function() {
                const submitBtn = $(this).find('button[type="submit"]');
                submitBtn.prop('disabled', true)
                    .html('<i class="fas fa-spinner fa-spin me-2"></i>Mencari...');

                // Re-enable after 10 seconds as fallback
                setTimeout(function() {
                    submitBtn.prop('disabled', false)
                        .html('<i class="fas fa-search me-2"></i>Lacak Sekarang');
                }, 10000);
            });

            // Sample tracking number for demo
            $('.sample-tracking').click(function() {
                const sampleTracking = $(this).data('tracking');
                $('#trackingInput').val(sampleTracking);
            });
        });
    </script>
}