<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RodiTri Pekanbaru</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .navbar-custom {
            background: #ffffff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .navbar-nav .nav-link {
                color: #333333 !important;
            }

                .navbar-custom .navbar-nav .nav-link:hover {
                    color: #ff6b35 !important;
                }

        .btn-login {
            background: #ff6b35;
            border: 1px solid #ff6b35;
            color: white;
            transition: all 0.3s ease;
        }

            .btn-login:hover {
                background: #ff8e53;
                border-color: #ff8e53;
                color: white;
            }

        .footer-custom {
            background: #343a40;
            color: white;
            padding: 40px 0 20px 0;
            margin-top: 50px;
        }

            .footer-custom h5 {
                color: #fff;
                margin-bottom: 20px;
            }

            .footer-custom a {
                color: #adb5bd;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .footer-custom a:hover {
                    color: #fff;
                }

        .social-links a {
            display: inline-block;
            width: 40px;
            height: 40px;
            background: #495057;
            color: white;
            text-align: center;
            line-height: 40px;
            border-radius: 50%;
            margin-right: 10px;
            transition: all 0.3s ease;
        }

            .social-links a:hover {
                background: #007bff;
                transform: translateY(-2px);
            }

        .main-content {
            min-height: calc(100vh - 200px);
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-custom sticky-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Landing")">
                <i class="fas fa-car me-2"></i>RodiTri Pekanbaru
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <!-- Navbar items removed as requested -->
                </ul>

                <ul class="navbar-nav">
                    @if (Context.Session.GetString("Username") != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user me-1"></i>@Context.Session.GetString("NamaLengkap")
                            </a>
                            <ul class="dropdown-menu">
                                @if (Context.Session.GetString("Level") == "Admin")
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index", "Home")">
                                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard Admin
                                        </a>
                                    </li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Auth")">
                                        <i class="fas fa-sign-out-alt me-1"></i>Logout
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link btn btn-login rounded-pill px-3" href="@Url.Action("Login", "Auth")">
                                <i class="fas fa-sign-in-alt me-1"></i>Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer-custom">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5><i class="fas fa-car me-2"></i>RodiTri Pekanbaru</h5>
                    <p class="mb-3">Dealer mobil bekas terpercaya di Pekanbaru dengan kualitas terjamin dan harga terbaik. Melayani dengan sepenuh hati sejak 2020.</p>
                    <div class="social-links">
                        <a href="#" title="Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" title="Instagram"><i class="fab fa-instagram"></i></a>
                        <a href="#" title="WhatsApp"><i class="fab fa-whatsapp"></i></a>
                        <a href="#" title="YouTube"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6 mb-4">
                    <h5>Menu</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Landing")">Beranda</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Landing")">Mobil</a></li>
                        <li class="mb-2"><a href="#tentang">Tentang Kami</a></li>
                        <li class="mb-2"><a href="#kontak">Kontak</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h5>Kontak Info</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            Jl. Sudirman No. 123, Sukajadi, Pekanbaru 28122
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-phone me-2"></i>
                            <a href="tel:+6276112345678">(0761) 123-4567</a>
                        </li>
                        <li class="mb-2">
                            <i class="fab fa-whatsapp me-2"></i>
                            <a href="https://wa.me/6281234567890">+62 812-3456-7890</a>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-envelope me-2"></i>
                            <a href="mailto:info@roditripekanbaru.com">info@roditripekanbaru.com</a>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h5>Jam Operasional</h5>
                    <ul class="list-unstyled">
                        <li class="mb-1"><strong>Senin - Jumat:</strong> 08:00 - 17:00</li>
                        <li class="mb-1"><strong>Sabtu:</strong> 08:00 - 16:00</li>
                        <li class="mb-1"><strong>Minggu:</strong> 09:00 - 15:00</li>
                    </ul>

                    <div class="mt-3">
                        <h6>Metode Pembayaran</h6>
                        <div class="d-flex gap-2 mt-2">
                            <span class="badge bg-primary">Tunai</span>
                            <span class="badge bg-success">Transfer</span>
                            <span class="badge bg-info">Kredit</span>
                        </div>
                    </div>
                </div>
            </div>

            <hr class="my-4" style="border-color: #495057;">

            <div class="row align-items-center">
                <div class="col-md-8">
                    <p class="mb-0">&copy; 2024 RodiTri Pekanbaru. All rights reserved. Developed with ❤️ for automotive enthusiasts.</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>Sertifikat Terpercaya
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script>
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add active class to current nav item
        const currentLocation = location.pathname;
        const menuItems = document.querySelectorAll('.navbar-nav .nav-link');

        menuItems.forEach(item => {
            if (item.getAttribute('href') === currentLocation) {
                item.classList.add('active');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>