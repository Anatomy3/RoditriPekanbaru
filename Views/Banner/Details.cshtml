@model RoditriPekanbaru.Models.Banner
@{
    ViewData["Title"] = "Detail Banner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-eye me-2"></i>Detail Banner</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.BannerId" class="btn btn-warning">
            <i class="fas fa-edit me-1"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Kembali
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Informasi Banner</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Nama Banner:</strong></div>
                    <div class="col-sm-9">@Model.NamaBanner</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Link Tujuan:</strong></div>
                    <div class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.LinkTujuan))
                        {
                            <a href="@Model.LinkTujuan" target="_blank" class="text-primary">
                                <i class="fas fa-external-link-alt me-1"></i>@Model.LinkTujuan
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">Tidak ada link</span>
                        }
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Urutan:</strong></div>
                    <div class="col-sm-9">
                        <span class="badge bg-secondary fs-6">@Model.Urutan</span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Status:</strong></div>
                    <div class="col-sm-9">
                        <span class="badge bg-@(Model.IsActive ? "success" : "secondary") fs-6">
                            @(Model.IsActive ? "Aktif" : "Non-Aktif")
                        </span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Periode:</strong></div>
                    <div class="col-sm-9">
                        @if (Model.TanggalMulai.HasValue && Model.TanggalBerakhir.HasValue)
                        {
                            <span>@Model.TanggalMulai.Value.ToString("dd/MM/yyyy HH:mm") - @Model.TanggalBerakhir.Value.ToString("dd/MM/yyyy HH:mm")</span>
                        }
                        else
                        {
                            <span class="text-muted">Tidak terbatas</span>
                        }
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Dibuat Oleh:</strong></div>
                    <div class="col-sm-9">@Model.DibuatOleh</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Tanggal Dibuat:</strong></div>
                    <div class="col-sm-9">@Model.TanggalDibuat.ToString("dd/MM/yyyy HH:mm")</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">Preview Banner</h6>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.GambarBanner))
                {
                    <div class="text-center">
                        <img src="@Model.GambarBanner" alt="@Model.NamaBanner"
                             class="img-fluid rounded shadow-sm"
                             style="max-width: 100%; height: auto;">
                    </div>

                    <div class="mt-3">
                        <h6>Informasi Gambar:</h6>
                        <small class="text-muted">
                            <i class="fas fa-file-image me-1"></i>
                            Path: @Model.GambarBanner
                        </small>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-image fa-3x text-muted mb-2"></i>
                        <p class="text-muted">Tidak ada gambar</p>
                    </div>
                }
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.LinkTujuan))
        {
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="card-title mb-0">Test Link</h6>
                </div>
                <div class="card-body">
                    <p class="small mb-2">Klik tombol di bawah untuk test link banner:</p>
                    <a href="@Model.LinkTujuan" target="_blank" class="btn btn-outline-primary btn-sm w-100">
                        <i class="fas fa-external-link-alt me-1"></i>Test Link Banner
                    </a>
                </div>
            </div>
        }

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">Statistik</h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h6 class="text-primary mb-1">Status</h6>
                            <span class="badge bg-@(Model.IsActive ? "success" : "secondary")">
                                @(Model.IsActive ? "Aktif" : "Non-Aktif")
                            </span>
                        </div>
                    </div>
                    <div class="col-6">
                        <h6 class="text-primary mb-1">Urutan</h6>
                        <span class="badge bg-secondary">@Model.Urutan</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>