@model RoditriPekanbaru.Models.Customer

@{
    ViewData["Title"] = "Hapus Customer";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Hapus Customer</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Kembali ke Daftar
        </a>
    </div>

    <!-- Delete Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Konfirmasi Hapus Data</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5>Apakah Anda yakin ingin menghapus customer ini?</h5>
            </div>

            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NamaCustomer)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NamaCustomer)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Alamat)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Alamat)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NoTelepon)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NoTelepon)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.JenisKelamin)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.JenisKelamin)</dd>
            </dl>

            <form asp-action="Delete" class="text-center mt-4">
                <input type="hidden" asp-for="CustomerId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Hapus Customer
                </button>
                <a asp-action="Index" class="btn btn-secondary ml-2">
                    <i class="fas fa-times"></i> Batal
                </a>
            </form>
        </div>
    </div>
</div>